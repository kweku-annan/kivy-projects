<FONTS@Label>:
    font_size: 20
    font_name: 'fonts/unicode.arialr.ttf'
    color: (0, 0, 0, 1)

<TEXTINPUT@TextInput>:
    multiline: False

<MainWindow>:
    size: root.size
    pos: root.pos

    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: 'vertical'
        padding: 5
        Label:
            text: 'Akwaaba!'
            color: (0,0,0,1)
            font_size: 50
            font_name: "fonts/ComicSansMS3.ttf"
            bold: True
            size_hint_y: .1
        FloatLayout:
            size_hint_y: .7
            GridLayout:
                pos_hint: {'center_y': .5, 'center_x': .5}
                cols: 2
                spacing: 10
                padding: 30

                FONTS:
                    text: 'Name:'
                TEXTINPUT:
                FONTS:
                    text: "Contact:"
                TEXTINPUT:
                FONTS:
                    text: "Email:"
                TEXTINPUT:
                FONTS:
                    text: "Location:"
                TEXTINPUT:
        FloatLayout:
            size_hint_y: .1
#            width: .2
#            color: (1, .5, .6, 1)
            Button:
                text: "SUBMIT"
                size_hint: None, None
                height: 50
                pos_hint: {'center_x': .5}





